#include<iostream>
#include<stdlib.h>
#include<time.h>
#include<iomanip>
using namespace std;
int X[100];       //作業用配列
int card[7][7];   //ビンゴカード
int p;            //作業用変数
int i, j;         //作業用変数

void format_array() //配列を初期化する関数
{
  int i;
  for(i = 0; i < 100; i++)
  {
    X[i] = 0;
  }
}

int random_num()    //乱数を繰り出す関数
{
  while(1)
  {
    p = rand() % 99 + 1;
    if(X[p] == 0)
    {
        X[p] = 1;
        return p;
    }
  }
}

void make_card()
{
  for(i = 0; i < 7; i++)
  {
    for(j = 0; j < 7; j++)
    {
      if(i != 3 || j != 3)
      {
        card[i][j] = random_num();
      }else{
        card[i][j] = 0;
      }
    }
  }
}

void print_card()
{
  for(i = 0; i < 7; i++)
  {
    for(j = 0; j < 7; j++)
    {
      cout << "[";
      if(card[i][j] != 0)
      {
        cout << setw(2) << right << card[i][j];
      }else{
        cout << "  ";
      }
      cout << "]";
    }
    cout << "\n";
  }
}

int check_num(int p)
{
    for(i = 0; i < 7; i++)
    {
      for(j = 0; j < 7; j++)
      {
        if(card[i][j] == p)
        {
          card[i][j] = 0;
          cout << p << "はあります!!" << endl;
          print_card();   //ビンゴカードを表示
          return 0;
        }
      }
    }
    cout << p << "はありません" << endl;
    return 1;
  }

int check_bingo()
{
  /*-----縦方向のビンゴ探索-----*/
  for(j = 0; j < 7; j++)
  {
    p = 0;
    for(i = 0; i < 7; i++)
    {
      p += card[i][j];
    }
    if(p == 0){
      return 0;
    }
  }

    /*-----横方向のビンゴ探索-----*/
  for(i = 0; i < 7; i++)
  {
    p = 0;
    for(j = 0; j < 7; j++)
    {
      p += card[i][j];
    }
    if(p == 0){
      return 0;
    }
  }

    /*-----斜め方向のビンゴ探索(その1)-----*/
  p = 0;
  for(i = 0; i < 7; i++)
  {
    p += card[i][i];
  }
  if(p == 0){
    return 0;
  }
    /*-----斜め方向のビンゴ探索(その2)-----*/
  p = 0;
  for(i = 0; i < 7; i++)
  {
    p += card[i][6 - i];
  }
  if(p == 0){
    return 0;
  }
  return 1;
}

int main()
{
    srand((unsigned int)time(NULL));
    /*-----ビンゴカードの作成-----*/
    format_array();   //作業用配列を初期化
    make_card();      //ビンゴカードを作成
    print_card();     //ビンゴカードを表示

    /*-----ビンゴゲーム開始-----*/
    format_array();   //作業用乱数を初期化
    while(1)
    {
      p = random_num(); //乱数取得
      cout << p << ":Shoot!!" << endl;
      if(check_num(p) == 0)   //番号があるかかどうか確認
      if(check_bingo() == 0){ //ビンゴである場合
        cout <<  "ビンゴ!!!" << endl;
        break;        //終了
      }
    }
  return 0;
}
